{% extends (is_granted("ROLE_ADMIN")) ? ("admin/base.html.twig") : ("customer/base.html.twig") %}

{% block title %}Modifier le profil
{% endblock %}

{% block body %}
	<div class="container col-auto col-md-9 col-xl-10">
		<h1>Modifier le profil</h1>

		{{ include('profil/_form.html.twig', {'button_label': 'mettre à jour'}) }}

		{% if is_granted("ROLE_ADMIN") %}
			<a href="{{ path('profil_index') }}">retour à la liste</a>
		{% else %}
			<a href="{{ path('profil_index_customer') }}">retour à la liste</a>
		{% endif %}

		{{ include('profil/_delete_form.html.twig') }}
	</div>
{% endblock %}
